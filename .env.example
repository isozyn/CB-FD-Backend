# Environment Configuration Template for Railway Deployment
# Copy this file to .env for local development
# Railway will inject these variables automatically in production

# Application Environment
NODE_ENV=production
PORT=3000

# Frontend Configuration
NETLIFY_SITE_URL=https://starlit-croissant-5176b3.netlify.app
CORS_ORIGIN=https://starlit-croissant-5176b3.netlify.app

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-key-make-it-long-and-random
SESSION_SECRET=your-session-secret-key-for-production

# AI & Text Analysis APIs
REKA_API_KEY=sk-or-v1-your-reka-flash-api-key-here
REKA_API_URL=https://api.reka.ai/v1/chat/completions

OPENROUTER_API_KEY=sk-or-v1-your-openrouter-deepseek-api-key-here
OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions

# Security Scanning APIs
SCANII_API_KEY=your-scanii-api-key-here
SCANII_API_SECRET=your-scanii-secret-if-needed
SCANII_API_URL=https://api-us1.scanii.com/v2.2/files

# Database Configuration (Railway auto-injects)
DB_URL=postgresql://username:password@hostname:port/database

# Optional: Redis for caching (Railway auto-injects)
REDIS_URL=redis://username:password@hostname:port

# Optional: Email notifications
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM=noreply@yourdomain.com
